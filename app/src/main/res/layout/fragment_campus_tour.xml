<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="edu.andrews.cptr475.bernardm.andrewsapp.VirtualTour.CampusTourFragment$PlaceholderFragment">

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true">

        <ViewFlipper
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/FotosFlipper"
            android:layout_gravity="center|left|top"
            android:autoStart="true"
            android:scaleType="fitCenter"
            android:animateFirstView="true"
            android:adjustViewBounds="true"
            android:transitionName="@string/abc_activity_chooser_view_see_all"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center_horizontal|bottom"
            android:gravity="bottom"
            android:weightSum="1">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start Tour"
                android:id="@+id/starttour"
                android:layout_weight=".35"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="About Us"
                android:id="@+id/aboutus"
                android:layout_gravity="bottom"
                android:layout_weight=".35"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Guided Tours"
                android:id="@+id/button3"
                android:layout_gravity="center_horizontal|bottom|left"
                android:layout_weight=".35"/>
        </LinearLayout>

    </FrameLayout>

</RelativeLayout>
